@model IEnumerable<Product_Managementmvc.DataAccess.DBModel.Product>

<h1 style="color: #333;">Product Management</h1>


<div style="margin-bottom: 20px;">
    <a href="@Url.Action("Add", "Product")" class="btn btn-primary">Add Product</a>
</div>



<table id="productTable" class="table" style="width:100%">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <thead>

       
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                   
                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-warning">Update</a>

                   
                    <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
