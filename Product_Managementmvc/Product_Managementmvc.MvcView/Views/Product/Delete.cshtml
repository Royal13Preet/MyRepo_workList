<h2>Confirm Deletion</h2>
<p>Are you sure you want to delete the product <strong>@Model.Name</strong>?</p> <!-- Customize based on your model properties -->

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
</form>
